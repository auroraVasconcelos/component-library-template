{
  "name": "@virtualidentityag/[components-library]",
  "private": true,
  "version": "4.1.0",
  "description": "Stencil App Starter",
  "scripts": {
    "build": "npm run generate:component-json && stencil build",
    "build:es5": "npm run generate:component-json && stencil build --es5",
    "start": "npm run generate:component-json && stencil build --dev --watch --serve",
    "start:es5": "npm run generate:component-json && stencil build --dev --watch --serve --es5",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "npm run generate:component && npm run generate:component-json",
    "generate:component": "node component.js",
    "generate:component-json": "node component-json.js",
    "lint": "npm run lint:styles && npm run lint:ts",
    "lint:styles": "stylelint 'src/components/**/*.scss' --fix",
    "lint:ts": "prettier-eslint $PWD/'src/**/*.ts' --write",
    "docs": "typedoc src/components/ui-*"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/git": "^9.0.0",
    "@stencil/core": "^1.12.2",
    "@stencil/router": "^1.0.1",
    "@stencil/sass": "^1.3.2",
    "@storybook/cli": "^5.3.19",
    "@types/jest": "24.9.1",
    "@types/puppeteer": "2.0.1",
    "cz-conventional-changelog": "^3.2.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "inquirer": "^7.3.2",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prettier-eslint-cli": "^5.0.0",
    "prompt-confirm": "^2.0.4",
    "puppeteer": "2.1.1",
    "semantic-release": "^17.1.1",
    "stylelint": "^13.6.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.6"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "master-v4"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
